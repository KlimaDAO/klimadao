{
  "name": "@klimadao/site",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prettier --check . && next build",
    "start": "next start",
    "lint": "next lint",
    "lingui:extract": "NODE_ENV=test lingui extract --clean",
    "lingui:compile": "NODE_ENV=test lingui compile",
    "sync": "NODE_ENV=test LINGUI_CONFIG=.linguirc_local lingui extract --overwrite && lingui compile",
    "sync_and_purge": "NODE_ENV=test LINGUI_CONFIG=.linguirc_local lingui extract --overwrite --clean && lingui compile",
    "postinstall": "npm run lingui:compile"
  },
  "dependencies": {
    "@emotion/css": "^11.7.1",
    "@emotion/server": "^11.4.0",
    "@lingui/core": "^3.13.0",
    "@lingui/react": "^3.13.0",
    "@sanity/block-content-to-react": "^3.0.0",
    "@sanity/client": "^2.23.2",
    "@translation/lingui": "^1.0.0",
    "ethers": "^5.5.2",
    "next": "^12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@lingui/cli": "^3.13.0",
    "@lingui/loader": "^3.13.0",
    "@lingui/macro": "^3.13.0",
    "@types/node": "16.11.12",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "8.4.1",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "2.5.1",
    "typescript": "^4.5.4"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=14.18.1"
  }
}
