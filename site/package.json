    "@lingui/react": "^3.13.0",
    "@portabletext/react": "^1.0.6",
    "@sanity/block-content-to-react": "^3.0.0",
    "@sanity/client": "^3.3.2",
    "@translation/lingui": "^1.0.0",
    "ethers": "^5.5.2",
    "firebase-admin": "^10.2.0",
    "jspdf": "^2.5.1",
    "lodash": "^4.17.21",
    "next": "^12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.29.0",
    "recharts": "^2.1.10",
    "yup": "^0.32.11"
